<Window x:Class="Noutecon__Exam_.View.TeacherView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Noutecon__Exam_.View"
        xmlns:viewModel="clr-namespace:Noutecon__Exam_.ViewModel"
        mc:Ignorable="d"
        Title="TeacherView" Height="450" Width="800">

    <Window.DataContext>
        <viewModel:TeacherViewViewModel/>
    </Window.DataContext>
    
    <Grid>
        <TextBlock>
            <Run Text="Hello, teacher "/>
            <Run Text="{Binding CurrentTeacher.Username}"/>
        </TextBlock>
    </Grid>
</Window>
