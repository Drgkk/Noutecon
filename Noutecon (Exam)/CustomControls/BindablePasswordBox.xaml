<UserControl x:Class="Noutecon__Exam_.CustomControls.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Noutecon__Exam_.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">
    <PasswordBox x:Name="txtPassword"
          FontSize="16"
          FontWeight="Medium"
          FontFamily="Gautami"
          Foreground="{StaticResource TextColor}"
          CaretBrush="LightGray"
          BorderBrush="DarkGray"
          BorderThickness="0, 0, 0, 2"
          VerticalContentAlignment="Bottom"
          Padding="30, 0, 0, 2"
          MaxLength="16">
        <PasswordBox.Background>
            <ImageBrush ImageSource="/Noutecon (Exam);component/Images/KeyIcon.png" Stretch="Uniform" AlignmentX="Left"/>
        </PasswordBox.Background>
    </PasswordBox>
</UserControl>
